<h1> <%= @item.name %> </h1>

<% if session[:bid] == 1 %>
  <h3>Thank you for your bid. Good luck!</h3>
  <% session[:bid] = 0 %>
<% end %>

<div>
  <p> Description: <%= @item.description %> </p>
  <p> Auction Start Date: <%= @item.start_date %> </p>
  <p> Auction End Date: <%= @item.end_date %> </p>
  <p> Current total number of bidders: <%= @number_bidders %> </p>
</div>



<% if session[:id] == nil %>

  <p> To place a bid please <a href="/users/login">login</a> or <a href="/users/new">register</a>. </p>

<% elsif session[:id] != @item.user_id %>

  <div>
    <form action='<%= @item.id %>/bids/new' method='post'>
      <input type='text' name='bid_amount' placeholder='Bid Amount'>
      <input type='submit' value='Place Bid'>
    </form>
  </div>

<% end %>
